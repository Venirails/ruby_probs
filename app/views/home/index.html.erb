
<%= form_with(model: @employee,url: "/home/index")  do |form| %>

    <div class="field">
    <%= form.label :emp_id %>
    <%= form.text_field :emp_id %>
  </div>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.number_field :salary %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
